# Kairos Configuration Example
# Copy this file to .env and configure your settings

# Database
DATABASE_PATH=/app/data/triage.db

# Feed fetching
FEED_REFRESH_MINUTES=5
MAX_ITEMS_PER_FEED=50
FEED_PARALLEL_WORKERS=1
FEED_TIMEOUT_SECONDS=30

# Webhook - Discord/Slack/Custom
# Leave empty to disable webhook alerts
WEBHOOK_URL=
WEBHOOK_TIMEOUT_SECONDS=10
WEBHOOK_RETRY_COUNT=3

# Daily digest
DIGEST_OUTPUT_PATH=/app/digests
DIGEST_GENERATION_TIME=09:00
TIMEZONE=Pacific/Auckland

# Web interface
PORT=8083
HOST=0.0.0.0

# Authentication
# Set a secure random token for production (e.g., openssl rand -hex 32)
# Leave empty to disable authentication (not recommended for public deployments)
AUTH_TOKEN=

# User identification
USER_IDENTIFIER=your-username

# Logging
LOG_LEVEL=INFO
